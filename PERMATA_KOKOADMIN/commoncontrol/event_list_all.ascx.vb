                Case "ADMIN"
                    Response.Redirect("admin.kehadiran.update.aspx?eventid=" & strKeyID & "&instruktorid=" & strInstruktorID & "&tahun=" & ddlTahun.Text & "&admin_ID=" & Request.QueryString("admin_ID"))
