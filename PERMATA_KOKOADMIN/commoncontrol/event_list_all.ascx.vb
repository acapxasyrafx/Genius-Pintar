                Case "PENGARAH"
                Case Else
                    lblMsg.Text = "Anda tiada kebenaran untuk meneruskan fungsi ini. Sila berhubung dengan admin jika ini satu kesilapan."
            End Select

        Catch ex As Exception
            lblMsg.Text = "System Error: " & ex.Message
        End Try

    End Sub

    Private Function getInstruktorID(ByVal strEventID As String) As String
        strSQL = "SELECT InstruktorID FROM koko_event WHERE EventID=" & strEventID
        strRet = oCommon.getFieldValue(strSQL)
        Return strRet

