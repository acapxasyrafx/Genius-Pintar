    Private Function getSQL() As String
        Dim tmpSQL As String
        Dim strWhere As String = ""
        Dim strWhereIn As String = ""
        Dim strOrder As String = " ORDER BY Jumlah DESC"

        '--chkRuleAge
        If chkRuleAge.Checked = True Then
            strWhereIn += " AND UKM1.IsCount=1"
        End If

        '--DOB_Year
        If Not ddlDOB_Year.Text = "ALL" Then
            strWhereIn += " AND UKM1.DOB_Year='" & ddlDOB_Year.Text & "'"
        End If

        tmpSQL = "SELECT SchoolState,(SELECT COUNT(*) FROM UKM1 WHERE UKM1.SchoolState=SchoolState.SchoolState AND UKM1.ExamYear='" & ddlExamYear.Text & "'" & strWhereIn & ") as Jumlah"
        tmpSQL += " FROM SchoolState"
        strWhere += " WHERE SchoolState.SchoolState<>'UKM2-KPT' AND SchoolState.SchoolState<>'UKM2-ASASI'"
        getSQL = tmpSQL & strWhere & strOrder
        ''--debug
        'Response.Write(getSQL)

        Return getSQL

    End Function

